<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Spoudazo Popup</name>
    <author></author>
    <version>1.0.0</version>
    <description></description>
    <files>
        <filename>mod_spoudazo_popup.xml</filename>
        <filename module="mod_spoudazo_popup">mod_spoudazo_popup.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
		<filename>script.js</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <languages>
		<language tag="en-GB">en-GB.mod_spoudazo_popup.ini</language>
		<language tag="el-GR">el-GR.mod_spoudazo_popup.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="bullets_icon" type="text" label="Bullets Icon" />
				<field name="bullet1" type="text" label="Bullet 1" />
				<field name="bullet2" type="text" label="Bullet 2" />
				<field name="bullet3" type="text" label="Bullet 3" />
				<field name="bullet4" type="text" label="Bullet 4" />
				<field name="popup_image" type="media" directory="" label="Select image" />
			</fieldset>
		</fields>
	</config>
</extension>